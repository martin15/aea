<section class="registration">
  <div class="user container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= flash_type(key) %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= value %>
      </div>
    <% end %>
    <div class="row">
      <%= render :partial => "/shared/user_side_menu" %>
      <div class="col-sm-9 content">
        <div class="row box no-margin-b padding_b_10">
          <h2>Shuttle Bus</h2>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Time</th>
                <th>Airport Name</th>
              </tr>
            </thead>
            <tbody>
              <% @shuttle_buses.each_with_index do |shuttle_bus, x| %>
                <tr>
                  <th scope="row"><%= x+1 %></th>
                  <td><%= shuttle_bus.name %></td>
                  <td>
                    <%= shuttle_bus.try(:pick_up_date).try(:strftime, "%Y %b %d") %>&nbsp;-&nbsp;
                    <%= shuttle_bus.try(:pick_up_time).try(:strftime, "%H:%M") %>
                  </td>
                  <td><%= shuttle_bus.airport_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="row box">
          <h2>Pick Up Schedule</h2>
          <div class="col-md-6">
            <h4>Arriving Schedule</h4>
            <div class="row col-md-4">
              Arriving Time
            </div>
            <div class="col-md-8">
              <%= @pick_up_schedule.try(:arriving_date).try(:strftime, "%Y %b %d") %>&nbsp;-&nbsp;
              <%= @pick_up_schedule.try(:arriving_time).try(:strftime, "%H:%M") %>
            </div>
            <div class="row col-md-4">
              Flight No
            </div>
            <div class="col-md-8">
              <%= @pick_up_schedule.try(:arriving_flight_number) %>&nbsp;
            </div>
            <div class="row col-md-4">
              From
            </div>
            <div class="col-md-8">
              <%= @pick_up_schedule.try(:arriving_flight_from) %>&nbsp;
            </div>
          </div>
          <div class="col-md-6">
            <h4>Departing Schedule</h4>
            <div class="row col-md-4">
              Arriving Time
            </div>
            <div class="col-md-8">
              <%= @pick_up_schedule.try(:departing_date).try(:strftime, "%Y %b %d") %>&nbsp;-&nbsp;
              <%= @pick_up_schedule.try(:departing_time).try(:strftime, "%H:%M") %>
            </div>
            <div class="row col-md-4">
              Flight No
            </div>
            <div class="col-md-8">
              <%= @pick_up_schedule.try(:departing_flight_number) %>&nbsp;
            </div>
            <div class="row col-md-4">
              From
            </div>
            <div class="col-md-8">
              <%= @pick_up_schedule.try(:departing_flight_from) %>&nbsp;
            </div>
          </div>
          <div class="col-md-12 margin_t_20">
            <%= link_to "Edit", users_edit_pick_up_schedule_path, :class=> "btn btn-success float-right" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>




