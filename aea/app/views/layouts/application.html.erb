<!DOCTYPE html>
<html>
<head>
  <title>Aea</title>
  <%= stylesheet_link_tag    'application', "font-awesome.css", "animate.min.css",
                             "owl.carousel.css", "owl.transitions.css", "prettyPhoto.css",
                             "responsive.css" %>
  <!--[if lt IE 9]>
    <script src="/assets/html5shiv.js"></script>
    <script src="/assets/respond.min.js"></script>
  <![endif]-->

  <%= csrf_meta_tags %>
</head>
<body id="home" class="homepage">
  <header id="header">
    <nav id="main-menu" class="navbar navbar-default navbar-fixed-top" role="banner">
      <div class="col-sm-12 info" style="background-color:#1fb7a6">
        <div class="col-md-6 hidden-xs">&nbsp;</div>
        <div class="col-md-6 hidden-xs" id="login-pan">
          <%= raw welcome_text %>
        </div>
      </div>
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="index.html"><%= image_tag "logo.jpg", :alt => "logo" %></a>
        </div>

        <div class="collapse navbar-collapse navbar-right">
          <ul class="nav navbar-nav">
            <li class="scroll active"><a href="#home">Home</a></li>
            <li class="scroll"><a href="#about">About</a></li>
            <li class="scroll"><a href="#statement">Statement</a></li>
            <li class="scroll"><a href="#get-in-touch">Contact</a></li>
          </ul>
        </div>
      </div><!--/.container-->
    </nav><!--/nav-->
  </header><!--/header-->

  <%= yield %>
  <footer id="footer">
    <div class="container">
      <div class="row">
        <div class="col-sm-6">
          &copy; 2016 Asia Evangelical Alliance.
        </div>
        <div class="col-sm-6">
          <ul class="social-icons">
            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
            <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
            <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
            <li><a href="#"><i class="fa fa-behance"></i></a></li>
            <li><a href="#"><i class="fa fa-flickr"></i></a></li>
            <li><a href="#"><i class="fa fa-youtube"></i></a></li>
            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
            <li><a href="#"><i class="fa fa-github"></i></a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer><!--/#footer-->
  
  <%= javascript_include_tag 'application', 'owl.carousel.min.js', 'mousescroll.js', 'smoothscroll.js',
                             'jquery.prettyPhoto.js', 'jquery.isotope.min.js', 'jquery.inview.min.js',
                             'wow.min.js' %>
</body>
</html>
