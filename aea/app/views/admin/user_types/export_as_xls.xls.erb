<table border="1">
  <tr>
    <th colspan="8" style="font-size: 20px;">
      User List - <%= @user_type.name %>
    </th>
  </tr>
  <tr>
    <th>#</th>
    <th>Registration Number</th>
    <th>Full Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Phone</th>
    <th>Country</th>
    <th>Passport</th>
  </tr>
  <% @users.each_with_index do |user, x| %>
    <tr>
      <td><%= x+1 %></td>
      <td><%= user.registration_number %></td>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.gender %></td>
      <td><%= "'#{user.phone}" unless user.phone.nil? %></td>
      <td><%= user.try(:country).try(:name) %></td>
      <td><%= user.passport_number %></td>
    </tr>
  <% end %>
</table>

