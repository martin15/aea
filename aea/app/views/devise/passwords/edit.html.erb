<section class="registration">
  <div class="user container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= flash_type(key) %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= value %>
      </div>
    <% end %>
    <div class="row">
      <%= render :partial => "/shared/user_side_menu" %>
      <div class="col-sm-9 content">
        <div class="box">
          <h2>Change your passwordsss</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                       html: { method: :put, class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
            <div class="form-group">
              <%= f.label :password, "New password *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password, autofocus: true, autocomplete: "off", :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm new password *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password_confirmation, :autocomplete => "off", :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Update Password", :class => "btn btn-success" %>
              </div>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>





