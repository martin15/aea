<section class="registration">
  <div class="user container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= flash_type(key) %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= value %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-6 content col-sm-offset-3">
        <div class="box">
          <h2>Forgot your password?</h2>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                       html: { method: :post, class: "form-horizontal" }) do |f| %>
          <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.label :email, "Email *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :email, :class => "form-control", autofocus: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Send me reset password instructions", :class => "btn btn-success" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
