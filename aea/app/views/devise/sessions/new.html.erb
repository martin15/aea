<section class="registration">
  <div class="user container">
    <div class="row">
      <div class="col-sm-6 content col-sm-offset-3">
        <div class="box">
          <h2>Log in</h2>
          <%= form_for(resource, html: {class: "form-horizontal"}, as: resource_name,
                        url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, "Email *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :email, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, "Password *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <div class="col-sm-12">
                  <div class="checkbox">
                    <label>
                      <%= f.check_box :remember_me %>
                      Remember me
                    </label>
                  </div>
                </div>
              </div>
            <% end -%>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Log in", :class => "btn btn-success" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
