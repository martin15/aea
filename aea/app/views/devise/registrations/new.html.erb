<section class="registration">
  <div class="user container">
    <div class="row">
      <div class="col-sm-6 content col-sm-offset-3">
        <div class="box">
          <h2>Sign up</h2>
          <%= form_for(resource, html: {class: "form-horizontal"},as: resource_name,
            url: registration_path(resource_name)) do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger alert-dismissable" group="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4><%= pluralize(@user.errors.count, "error") %> prohibited this group from being saved:</h4>
                <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.label :title, "Title *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.select :title, list_title, {},:class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :first_name, "First Name *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :first_name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :last_name, "Last Name *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :last_name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, "Email *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :email, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :phone,  raw("Cell/Mobile Number <span class=small-font>(Country Code + Phone Number, eg : +6285612345678)</span>"), :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :phone, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :passport_number, "Passport Number *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :passport_number, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :age, "Age *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :age, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :country_id, "Country of Citizenship *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.select :country_id, Country.list, {},:class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, "Password *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Password Confirmation *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :gender, "Gender *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <label class="radio-inline">
                  <%= f.radio_button :gender, "female" %> Female
                </label>
                <label class="radio-inline">
                  <%= f.radio_button :gender, "male" %> Male
                </label>
              </div>
            </div>
            <div class="form-group">
              <%= label_tag "recaptcha-anchor-label", "Captcha *", :class => "col-sm-12 control-label margin_b_10" %>
              <div class="col-sm-12">
                <%= recaptcha_tags %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <span class="must-fill">* You must fill the field</span>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Sign up", :class => "btn btn-success" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
