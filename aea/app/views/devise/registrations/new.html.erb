<section class="registration">
  <div class="user container">
    <div class="row">
      <div class="col-sm-6 content col-sm-offset-3">
        <div class="box">
          <h2>Sign up</h2>
          <%= form_for(resource, html: {class: "form-horizontal"},as: resource_name,
            url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <%#*<div class="form-group">%>
              <%#= f.label :user_type_id, "User Type *", :class => "col-sm-12 control-label" %>
              <%#*<div class="col-sm-12">%>
                <%# UserType.all.each do |user_type| %>
                  <%#*<div class="radio">%>
                    <%#*<label>%>
                      <%#= f.radio_button :user_type_id, user_type.id %>
                      <%#= user_type.name %>
                    <%#*</label>%>
                  <%#*</div>%>
                <%# end %>
              <%#*</div>%>
            <%#*</div>%>
            <div class="form-group">
              <%= f.label :title, "Title *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.select :title, list_title, {},:class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :first_name, "First Name *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :first_name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :last_name, "Last Name *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :last_name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, "Email *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :email, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :passport_number, "Passport Number *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :passport_number, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :age, "Age *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.text_field :age, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :country_id, "Country *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.select :country_id, Country.list, {},:class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, "Password *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password, :class => "form-control", autocomplete: "off" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, "Password Confirmation *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :gender, "Gender *", :class => "col-sm-12 control-label" %>
              <div class="col-sm-12">
                <label class="radio-inline">
                  <%= f.radio_button :gender, "female" %> Female
                </label>
                <label class="radio-inline">
                  <%= f.radio_button :gender, "male" %> Male
                </label>
              </div>
            </div>
            <div class="form-group">
              <%= label_tag "recaptcha-anchor-label", "Captcha *", :class => "col-sm-12 control-label margin_b_10" %>
              <div class="col-sm-12">
                <%= recaptcha_tags %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <%= f.submit "Sign up", :class => "btn btn-success" %>
              </div>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
